{
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["--init"],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localWorkspaceFolder}/tmp/data/,target=/var/lib/dokku/services/rethinkdb/,type=bind"
  ],
  "containerEnv": {
    "RETHINKDB_HOST_ROOT": "${localWorkspaceFolder}/tmp/data"
  }
}
