#!/usr/bin/env bash
export RETHINKDB_IMAGE=${RETHINKDB_IMAGE:="rethinkdb"}
export RETHINKDB_IMAGE_VERSION=${RETHINKDB_IMAGE_VERSION:="2.3.6"}
export RETHINKDB_ROOT=${RETHINKDB_ROOT:="$DOKKU_LIB_ROOT/services/rethinkdb"}
export RETHINKDB_HOST_ROOT=${RETHINKDB_HOST_ROOT:=$RETHINKDB_ROOT}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=("backup" "backup-auth" "backup-deauth" "backup-schedule" "backup-schedule-cat" "backup-set-encryption" "backup-unschedule" "backup-unset-encryption" "clone" "export" "import")
export PLUGIN_COMMAND_PREFIX="rethinkdb"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$RETHINKDB_ROOT
export PLUGIN_DATA_HOST_ROOT=$RETHINKDB_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(28015 29015 8080)
export PLUGIN_DATASTORE_WAIT_PORT=28015
export PLUGIN_DEFAULT_ALIAS="RETHINKDB"
export PLUGIN_DISABLE_PULL=${RETHINKDB_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="RETHINKDB_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_RETHINKDB"
export PLUGIN_IMAGE=$RETHINKDB_IMAGE
export PLUGIN_IMAGE_VERSION=$RETHINKDB_IMAGE_VERSION
export PLUGIN_SCHEME="rethinkdb"
export PLUGIN_SERVICE="RethinkDB"
export PLUGIN_VARIABLE="RETHINKDB"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.31.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.3.3"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.10.3"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.4.3"
